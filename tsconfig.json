{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["es2022"],
    "outDir": "./dist",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020"
  }
}
